	<!--Custom styles-->
	<link rel="stylesheet" type="text/css" href="/css/login.css">
</head>
<body>
	<%- include('partials/navbar') -%>
    <% if(error) {%>
        <div class="alert alert-danger text-center">
            <strong>Warning!</strong> <%=error %>
        </div>
	<% } %>
	<% if(message) {%>
        <div class="alert alert-success text-center">
            <strong>Success!</strong> <%=message %>
        </div>
    <% } %>
<div class="container">
	<div class="row">
		<div class="formFrame">
			<form action="/login" method="POST">
					<div class="titleStyle">
						<h3>LogIn</h3>
					</div>
					<div class="usernameInput">
						<input type="text" name="username" placeholder="username" required = "true">
					</div>
					<div class="passwordInput">
						<input type="password" name="password" placeholder="password" required = "true">
					</div>
					<div class="submitButton">
						<input type="submit" value="LogIn" class="btn btn-warning btn-lg">
					</div>
					<div class="helper">
						Don't have an account? <a href="/register" class="stretched-link">Sign up!</a>
					</div>
					<div class="helper">
						Forgot your password? <a href="/forgot-password" class="stretched-link">Reset password here!</a>
					</div>
				</form>
		</div>
	</div>
</div>
</body>
</html>